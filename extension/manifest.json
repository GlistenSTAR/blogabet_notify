{
    "manifest_version": 3,
    "name": "Outlook Email Notifier",
    "version": "1.0",
    "description": "Detects new emails in Outlook.com",
    "permissions": [
      "storage",
      "tabs",
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  